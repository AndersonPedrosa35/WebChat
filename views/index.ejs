<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>WebChat</title>
  </head>
  <script src="/socket.io/socket.io.js"></script>
  <body>
    <header>
      <h3>Projeto WebChat</h3>
      <h3>Mensagens</h3>
    </header>
    <section class="container">
      <section class="containerName">
        <form class="formName">
          <label for='inputUserName'>
            <input
              id='inputUserName'
              data-testid="nickname-box"
              placeholder="Digite um apelido"
            />
          </label>
          <button data-testid="nickname-button">Salvar</button>
        </form>
        <h3>Usu√°rios Ativos</h3>
        <ul id="users-on">
        </ul>
      </section>
      <section class='messages'>
        <ul id='ul-message'>
          <% findMessages.forEach(({ nickname, message, timestamp }) => { %>
          <li data-testid="message" class="message">
            <spam class="timestamp"><%= `${timestamp} - ` %></spam>
            <em class="user"><%= `${nickname} : ` %></em>
            <spam><%= message %></spam>
          </li>
          <% }) %>
        </ul>
      </section>
    </section>
      <form class="formMessage" action="">
        <label for='inputMessage'>
          <input
            id="inputMessage"
            autocomplete="off"
            data-testid="message-box"
            placeholder="Digite sua mensagem"
          />
        </label>
        <button data-testid="send-button">Send</button>
      </form>
    <script src="script.js"></script>
  </body>
</html>